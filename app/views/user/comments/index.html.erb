<h2>Comments</h2>
<ul>
  <%= @comments.each do |comment| %>
    <li>
      <%= comment.content %>(<%= comment.created_at %>)
      <%= comment.content %>(<%= comment.created_at %>) by <%= comment.user&.email %>
      <%= link_to 'Edit', user_edit_comment_path(@post, comment) if user_signed_in? && comment.user == current_user %>
      <%= button_to 'Delete', user_comment_path(@post, comment), method: :delete if user_signed_in? && comment.user == current_user %>
    </li>
  <% end %>
</ul>
<%= paginate @comments %>
<%= link_to 'Post List', user_posts_path %>